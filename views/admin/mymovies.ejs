<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/movie.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (prods.length > 0) { %>
                    <div class="grid">
                        <% for (let movie of prods) { %>
                            <article class="card movie-item">
                                <header class="card__header">
                                    <h1 class="movie__title">
                                        <%= movie.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img src="/<%= movie.imageUrl %>" alt="<%= movie.title %>">
                                </div>
                                <div class="card__content">
                                    <h2 class="movie__subtitle">Rated: 
                                        <%= movie.subtitle %>
                                    </h2>
                                    <p class="movie__description">
                                        <%= movie.description %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-movie/<%= movie._id %>?edit=true" class="btn">Edit</a>
                                    <form action="/admin/delete-movie" method="POST">
                                        <input type="hidden" value="<%= movie._id %>" name="movieId">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button class="btn" type="submit">Delete</button>
                                    </form>

                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Movies Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>
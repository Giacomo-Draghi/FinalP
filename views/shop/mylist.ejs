<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/mylist.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (movies.length > 0) { %>
                <ul class="mylist__item-list">
                    <% movies.forEach(p => { %>
                        <li class="mylist__item">
                            <div class="mylist__item__imgDiv" style="width: 25%; padding-right: 5px;">
                                <img src="/<%= p.movieId.imageUrl %>"
                                alt="<%= p.movieId.title %>" style="width: 100%;">
                            </div>
                            <h1><%= p.movieId.title %></h1>
                            <form action="/mylist-delete-item" method="POST">
                                <input type="hidden" value="<%= p.movieId._id %>" name="movieId">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <a href="/movie-detail/<%= p.movieId._id %>" class="btn">Details</a>
                                <button class="btn danger" type="submit">Delete</button>
                            </form>
                        </li>
                    <% }) %>
                </ul>
                <hr>
                
            <% } else { %>
                <h1>No Movies in Your List!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>